<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">
        <SwitchPreference
            app:key="notifications"
            android:summaryOff="Reminder off"
            android:summaryOn="Reminder on"
            android:icon="@drawable/baseline_add_alert_black_24dp"
            android:title="@string/alarm_title" />
    </PreferenceCategory>

    <PreferenceCategory app:key="languafe_category"
        android:title="Language Preferences">
        <Preference
            app:key="language_setting"
            android:title="@string/language"
            android:summary="@string/change_language_settings"/>
    </PreferenceCategory>

</PreferenceScreen>